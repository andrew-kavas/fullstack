{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
   "esm": true,
   "experimentalSpecifierResolution": "node"
  }
}